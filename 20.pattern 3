1
0 1
1 0 1
0 1 0 1
1 0 1 0 1

#include<iostream>
using namespace std;

int nBinaryTriangle(int n) {
    int i, j;
    int start;
    for (i = 1; i <= n; i++) {
        if (i % 2 == 0) {
            start = 0;
        } else {
            start = 1;
        }
        for (j = 1; j <= i; j++) {
            cout << start << " ";
            start = 1 - start;
        }
        cout << endl;
    }
}

int main() {
    int n = 3;
    nBinaryTriangle(n);
    return 0;
}

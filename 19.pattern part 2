#include<iostream>
using namespace std;
int upper(int n){
    int i,j;
    for(i=0;i<n;i++){
        for(j=0;j<n-i-1;j++){
            cout<<" ";
        }
        for(j=0;j<2*i+1;j++){
            cout <<"*";
        }
        for(j=0;j<n-i+1;j++){
            cout<<" ";
        }
        cout<< endl;
    }
}
int lower(int n1){
    int i,j;
    for(i=0;i<n1;i++){
        for(j=0;j<=i;j++){
            cout<<" ";
        }
        for(j=0;j<2*n1-(2*i+1);j++){
            cout <<"*";
        }
        for(j=0;j<=i;j++){
            cout<<" ";
        }
        cout << endl;
    }
}
int main(){
    int n=5;
    int n1=4;
    upper(n);
    lower(n1);
    return 0;
}

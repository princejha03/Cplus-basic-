#include<iostream>
using namespace std;
int nStarTriangle(int n) {
    int i,j;
    for(i=0;i<n;i++){
        for(j=0;j<=i;j++){
            cout << "*";
        }
        cout << endl;
    }
    for(i=0;i<n;i++){
        for(j=0;j<n-i-1;j++){
            cout << "*";
        }
        cout << endl;
    }
    
}
int main(){
    int n=4;
    nStarTriangle(n);
    return 0;
}
